{{> navbar}}
<h1>Your Cart</h1>
{{#if logged_in}}
    {{#if items.length}}
        <ul>
            {{#each items}}
                <li>
                    {{this.cartItem.name}} - ${{this.cartItem.price}}
                    <!-- Add other item details here -->
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>Your cart is empty.</p>
    {{/if}}
{{else}}
    <p>Please log iun to view your cart</p>
{{/if}}